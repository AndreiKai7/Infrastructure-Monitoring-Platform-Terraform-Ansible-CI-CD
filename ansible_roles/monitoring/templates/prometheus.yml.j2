global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'client_servers'
    static_configs:
      # Генерируем список целей из группы clients
      {% for host in groups['clients'] %}
      - targets: ['{{ hostvars[host].ansible_default_ipv4.address }}:9100']
        labels:
          instance: '{{ host }}'
      {% endfor %}